<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#FF512F" />
            <gradient android:angle="-90" android:startColor="#FF512F" android:endColor="#5FC3E4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#FF512F" />
            <solid android:color="#5FC3E4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#E55D87" android:endColor="#5FC3E4" />
        </shape>
    </item>
</selector>